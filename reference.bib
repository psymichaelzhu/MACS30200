	pages = {337--351},
	number = {3},
	journaltitle = {Political Analysis},
	shortjournal = {Polit. Anal.},
	author = {Argyle, Lisa P. and Busby, Ethan C. and Fulda, Nancy and Gubler, Joshua and Rytting, Christopher and Wingate, David},
